<header>
   <div class="container flex space-between align-center">
     <nav class="menu-container ">
          <ul class="main-menu flex">
               {% for item in options.header_menu %}
                    <li class="menu-item">
                         <a href="{{item.menu_link.url}}" class="" >{{item.menu_link.title}} 
                                   {% if item.has_sub_menu == true %}
                                        <span>
                                             <svg width="10" height="7" viewBox="0 0 10 7" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M4.52812 6.55625L0.2625 2.3125C0.065625 2.09375 0.065625 1.76563 0.2625 1.56875L0.765625 1.06563C0.9625 0.86875 1.29062 0.86875 1.50937 1.06563L4.9 4.43438L8.26875 1.06563C8.4875 0.86875 8.81562 0.86875 9.0125 1.06563L9.51562 1.56875C9.7125 1.76563 9.7125 2.09375 9.51562 2.3125L5.25 6.55625C5.05312 6.75313 4.725 6.75313 4.52812 6.55625Z" fill="#0062A4"/></svg>
                                        </span>
                                   {%endif%}
                         </a>
                         {% if item.has_sub_menu == true %}
                               <ul class="sub-menu">
                                     {% for sub_item in item.sub_menu %}
                                        <li class="sub-menu-item">
                                         <a href="{{sub_item.menu_item.url}}" class="">{{sub_item.menu_item.title}}</a>
                                        </li>
                                     {% endfor %}
                               </ul>
                         {% endif %}
                    </li>
               {% endfor %}  
          </ul>
          <div class="menu-btn" id="burger-button">
               <div class="menu-btn__lines"></div>
          </div>
     </nav>
   
   <div class="contact-col">
     <a href="{{options.contact_button.url}}" alt="{{options.contact_button.title}}" class="btn">
       <span class="ct-title">{{options.contact_button.title}} </span> 
          <span class="ct-arrow">
               <svg width="30" height="16" viewBox="0 0 30 16" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M29.7071 8.70711C30.0976 8.31658 30.0976 7.68342 29.7071 7.29289L23.3431 0.928932C22.9526 0.538408 22.3195 0.538408 21.9289 0.928932C21.5384 1.31946 21.5384 1.95262 21.9289 2.34315L27.5858 8L21.9289 13.6569C21.5384 14.0474 21.5384 14.6805 21.9289 15.0711C22.3195 15.4616 22.9526 15.4616 23.3431 15.0711L29.7071 8.70711ZM0 9H29V7H0V9Z" fill="#FF0000"/></svg>
          </span>
          <span class="ct-enveloped">
               <svg xmlns="http://www.w3.org/2000/svg" width="45" height="32" viewBox="0 0 45 32" fill="none"><path d="M1.60714 0C1.18091 4.24977e-05 0.772157 0.168636 0.470768 0.468685C0.16938 0.768734 4.26164e-05 1.17567 0 1.6V30.4C4.26164e-05 30.8243 0.16938 31.2313 0.470768 31.5313C0.772157 31.8314 1.18091 32 1.60714 32H43.3929C43.8191 32 44.2278 31.8314 44.5292 31.5313C44.8306 31.2313 45 30.8243 45 30.4V1.6C45 1.17567 44.8306 0.768734 44.5292 0.468685C44.2278 0.168636 43.8191 4.2427e-05 43.3929 0H1.60714ZM6.01004 3.2H38.99L22.5 17.1L6.01004 3.2ZM3.21429 5.05003L21.4621 20.4166C21.7522 20.661 22.12 20.795 22.5 20.795C22.88 20.795 23.2478 20.661 23.5379 20.4166L41.7857 5.05003V28.8H3.21429V5.05003Z" fill="#1B75BB"/></svg>
          </span>
     </a>
   </div>
</header>
